<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzp.pedometer.fragment.HomePageFragment">

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:arc_stroke_width="10dp"
        app:arc_text_color="@color/colorAccent"
        app:arc_unfinished_color="@color/colorPrimaryDark"
        app:arc_finished_color="@color/colorAccent"
        app:arc_suffix_text="步"
        app:arc_suffix_text_padding="8dp"
        app:arc_bottom_text="今日已走"
        app:arc_bottom_text_size="18sp"
        app:arc_progress ="50"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
