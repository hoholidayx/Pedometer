<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzp.pedometer.activity.StepCountActivity">


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/ui_navigation_top_detail" />

    <com.hzp.pedometer.components.RateDashboard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/step_rate_dashboard_view" />

    <RelativeLayout
        android:id="@+id/step_count_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_step_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="æ­¥"
            android:layout_alignBaseline="@+id/text_view_step_count"
            android:layout_alignBottom="@+id/text_view_step_count"
            android:layout_toRightOf="@+id/text_view_step_count"
            android:layout_toEndOf="@+id/text_view_step_count" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/step_count_start_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/button_start"
        android:background="@android:color/transparent"
        android:checked="false" />

</LinearLayout>
