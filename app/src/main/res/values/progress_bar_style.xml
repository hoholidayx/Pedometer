<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomProgress">
    </style>

    <style name="CustomProgress.ArcProgress">
        <item name="arc_text_color">@color/colorAccent</item>
        <item name="arc_unfinished_color">@color/colorPrimaryDark</item>
        <item name="arc_finished_color">@color/colorAccent</item>
    </style>

    <style name="CustomProgress.ArcProgress.large">
        <item name="arc_stroke_width">10dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="arc_suffix_text_padding">3dp</item>
        <item name="arc_text_size">30sp</item>
        <item name="arc_bottom_text_size">18sp</item>
    </style>

    <style name="CustomProgress.ArcProgress.small">
        <item name="arc_stroke_width">5dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="arc_suffix_text_padding">0dp</item>
        <item name="arc_text_size">15sp</item>
        <item name="arc_bottom_text_size">9sp</item>
    </style>

</resources>
